<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Tell IIS to use Node.js -->
    <handlers>
      <add name="iisnode" path="backend/server.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- Ensure all requests are routed to backend/server.js -->
    <rewrite>
      <rules>
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="backend/server.js" />
        </rule>
      </rules>
    </rewrite>
   <staticContent>
      <!-- Ensure correct MIME types for JavaScript and other files -->
      <mimeMap fileExtension=".js" mimeType="application/javascript" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".css" mimeType="text/css" />
      <mimeMap fileExtension=".html" mimeType="text/html" />
      <mimeMap fileExtension=".jsx" mimeType="application/javascript" />
    </staticContent>
    <!-- Disable directory browsing -->
    <directoryBrowse enabled="false" />

    <!-- Enable detailed error messages for debugging -->
    <httpErrors errorMode="Detailed" existingResponse="PassThrough" />

  </system.webServer>
</configuration>
